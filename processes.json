      "repo" : "https://github.com/GeekPark/shareading.git",
      "path" : "/home/dev/holoread",
      "post-deploy" : "yarn install && npm run doc && pm2 startOrRestart processes.json --env production"
    },
    "dev" : {
      "user" : "node",
      "host" : "212.83.163.1",
      "ref"  : "origin/master",
